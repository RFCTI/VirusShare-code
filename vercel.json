{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/old-url",
      "destination": "/new-url",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Custom-Header",
          "value": "my-value"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=0, must-revalidate, public"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  },
  "build": {
    "env": {
      "ANOTHER_SECRET": "@another_secret"
    }
  }
